{
  "name": "ltd-porfolio-ng",
  "version": "0.0.1",
  "base": "/porfolio/",
  "scripts": {
    "ng": "ng",
    "version": "echo $npm_package_version",
    "name": "echo $npm_package_name",
    "start": "ng serve --port 4300",
    "build": "ng build",
    "build:pro": "ng build --configuration=production --base-href /ltd-porfolio-ng/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "publish": "npm run build:pro && cd dist && npm publish",
    "publish:docker": "npm run build:docker && docker push $npm_package_publishConfig_dockerRegistry/ec.com.ltd.porfolio/ltd-porfolio-ng:$npm_package_version",
    "analyze": "ng build --stats-json && webpack-bundle-analyzer ./dist/stats.json"
  },
  "publishConfig": {
    "registry": "http://localhost:8081/repository/npm-internal/",
    "dockerRegistry": "localhost:8081"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "angular-cli-ghpages": "^2.0.3",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
